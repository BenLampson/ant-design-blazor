            <Description>This is a warning notice about copywriting.</Description>
        </Alert>
        <Alert Type="@AlertType.Error" ShowIcon>
            <Message>Error</Message>
            <Description>This is an error message about copywriting.</Description>
        </Alert>
    </Demo>
