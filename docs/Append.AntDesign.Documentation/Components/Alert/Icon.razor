<Codebox Title="Icon" id="components-alert-demo-icon">
    <Description>
        <p>
            A relevant icon will make information clearer and more friendly.
        </p>
    </Description>
    <Demo>
        <Alert Type="@AlertType.Success" ShowIcon>
            <Message>Success Tips</Message>
        </Alert>
        <Alert Type="@AlertType.Info" ShowIcon>
            <Message>Informational Notes</Message>
        </Alert>
        <Alert Type="@AlertType.Warning" ShowIcon>
            <Message>Warning</Message>
        </Alert>
        <Alert Type="@AlertType.Error" ShowIcon>
            <Message>Error</Message>
        </Alert>

